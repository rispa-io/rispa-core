{
  "name": "@rispa/core",
  "rispa:name": "core",
  "version": "4.1.3",
  "description": "rispa core plugin",
  "license": "MIT",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.js",
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@rispa/tslint-config": ">=1.0.0",
    "@types/fs-extra": "^4.0.2",
    "@types/node": "^8.0.31",
    "jest": "^20.0.3",
    "typescript": "^2.5.3",
    "tslint": "^5.7.0"
  },
  "dependencies": {
    "debug": "^2.6.6",
    "dependency-graph": "0.5.0",
    "fs-extra": "^3.0.1"
  },
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "lint": "tslint --type-check -p tsconfig.json",
    "lint:fix": "tslint --fix --type-check -p tsconfig.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}