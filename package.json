{
  "name": "@rispa/core",
  "rispa:name": "core",
  "version": "3.0.1",
  "description": "rispa core plugin",
  "license": "MIT",
  "main": "./lib/index.js",
  "devDependencies": {
    "jest": "^20.0.3",
    "typescript": "^2.5.2",
    "@types/node": "^8.0.31"
  },
  "dependencies": {
    "debug": "^2.6.6",
    "dependency-graph": "^0.5.0",
    "fs-extra": "^3.0.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!babel.js",
      "!index.js",
      "!.eslintrc.js"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
