{
  "name": "@rispa/core",
  "rispa:name": "core",
  "version": "4.2.1",
  "description": "rispa core plugin",
  "license": "MIT",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.ts",
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@rispa/tslint-config": ">=1.0.0",
    "@types/fs-extra": "^4.0.8",
    "@types/node": "^8.10.39",
    "jest": "^23.6.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "loglevelnext": "^3.0.0",
    "ansi-colors": "^3.2.3",
    "dependency-graph": "^0.8.0",
    "fs-extra": "^3.0.1"
  },
  "scripts": {
    "compile": "rm -rf lib && tsc",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint --fix -p tsconfig.json",
    "format": "prettier --write **/*.ts && npm run lint:fix"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "useTabs": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 120,
    "bracketSpacing": true
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
