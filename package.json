{
  "name": "@rispa/core",
  "rispa:name": "core",
  "version": "4.2.1",
  "description": "rispa core plugin",
  "license": "MIT",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.ts",
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@rispa/tslint-config": ">=1.0.0",
    "@types/fs-extra": "^5.0.2",
    "@types/node": "^8.0.31",
    "jest": "^22.4.3",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "dependency-graph": "^0.7.0",
    "fs-extra": "^5.0.0"
  },
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint --fix -p tsconfig.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
